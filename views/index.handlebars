
<h2 id="left">Ice Cream that has not been devoured:</h2>

<ul>
  <br>
  {{#each icecream}}
    {{#unless devoured}}
      {{> icecream/sundae devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2 id="right">Ice Cream that has been devoured:</h2>

<ul>
  <br>
  {{#each icecream}}
    {{#if devoured}}
      {{> icecream/sundae devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Sundae</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ic">Submit your sundae:</label>
    <br>
    <textarea type="text" id="ic" name="devoured"></textarea>
  </div>

